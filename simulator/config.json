{
  "server": {
    "host": "0.0.0.0",
    "port": 3456,
    "reload": false
  },
  "data_generation": {
    "interval_seconds": 180,
    "enable_background": true
  },
  "sensor_ranges": {
    "ph": {
      "min": 4.5,
      "max": 8.5,
      "optimal_min": 5.5,
      "optimal_max": 6.5,
      "initial": 6.0
    },
    "tds": {
      "min": 300,
      "max": 2500,
      "optimal_min": 800,
      "optimal_max": 1400,
      "initial": 1100
    },
    "temperature": {
      "min": 20,
      "max": 32,
      "optimal_min": 24,
      "optimal_max": 28,
      "initial": 26
    }
  },
  "drift_patterns": {
    "ph": {
      "daily_drift": 0.15,
      "noise_std": 0.05,
      "diurnal_amplitude": 0.1
    },
    "tds": {
      "daily_drift": -30,
      "noise_std": 15,
      "diurnal_amplitude": 20
    },
    "temperature": {
      "daily_drift": 0,
      "noise_std": 0.5,
      "diurnal_amplitude": 3
    }
  },
  "gamification": {
    "actions": {
      "add_nutrient": {
        "tds_change": 150,
        "ph_change": -0.1,
        "cooldown_minutes": 30
      },
      "add_water": {
        "tds_change": -100,
        "ph_change": 0.05,
        "cooldown_minutes": 20
      },
      "add_ph_down": {
        "ph_change": -0.5,
        "tds_change": 10,
        "cooldown_minutes": 15
      },
      "add_ph_up": {
        "ph_change": 0.5,
        "tds_change": 10,
        "cooldown_minutes": 15
      }
    },
    "alert_thresholds": {
      "ph_critical_low": 5.0,
      "ph_critical_high": 7.5,
      "tds_critical_low": 600,
      "tds_critical_high": 1800
    }
  },
  "database": {
    "use_existing": true,
    "connection_string": "postgresql://localhost/aeropon"
  },
  "llm": {
    "provider": "ollama",
    "base_url": "http://localhost:11434",
    "model": "qwen2.5:7b-instruct",
    "temperature": 0.7,
    "max_tokens": 500,
    "cache_duration_minutes": 30
  },
  "whatsapp": {
    "webhook_url": "http://localhost:3000/send-alert",
    "enable_alerts": true,
    "alert_cooldown_minutes": 60
  },
  "logging": {
    "level": "INFO",
    "file": "logs/simulator.log",
    "max_bytes": 10485760,
    "backup_count": 5
  }
}